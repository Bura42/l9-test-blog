{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-xs-12">
                <div class="pull-right" style="margin-bottom: 10px; margin-top: 20px;">
                    {#<a href="{{ path('admin_genus_new') }}" class="btn btn-primary pull-right">Add <span#}
                    {#class="fa fa-plus-circle"></span></a>#}
                    <a href="#" class="btn btn-primary pull-right">Add <span
                                class="fa fa-plus-circle"></span></a>
                </div>

                <h1>Users</h1>

                <table class="table table-striped">
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Date of birth</th>
                        <th>&nbsp;</th>
                    </tr>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.name }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.dateOfBirth|date('Y-m-d') }}</td>
                            <td>
                                <a href="{{ path('admin_users_edit',{'id': user.id}) }}"
                                   class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>

                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}