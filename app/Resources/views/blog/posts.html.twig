{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        Welcome!
        {#{{ app.user ? app.user.email : 'User' }}!#}
    </h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Posts</th>
            <th>Body</th>
            <th>User</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.body }}</td>
                <td>{{ post.user.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(posts) }}

{% endblock %}

