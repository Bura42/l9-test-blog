{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        Welcome!
        {{ app.user ? app.user.email : 'User' }}!
    </h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Posts</th>
            <th>code</th>
            <th>user</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>
                    <a href="#">
                        {{ post.title }}
                    </a>
                </td>
                <td>{{ post.body }}</td>
                <td>{{ post.user.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

