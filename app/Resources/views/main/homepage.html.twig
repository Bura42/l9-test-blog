{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        Welcome!
        {{ app.user ? app.user.email : 'User' }}!
    </h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Categorys</th>
            <th># code</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categorys %}
            <tr>
                <td>
                    <a href="{{ category.code }}/posts"> {{ category.name }}</a>
                </td>
                <td>{{ category.code }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

